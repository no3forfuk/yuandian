/* template/goodsList/goodsList.wxss */

.hotcell-list {
    margin-top: 5px;
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: nowrap;
}

.hotcell-list-left {
    flex: 50%;
    padding-right: 5px;
}

.hotcell-list-right {
    flex: 50%;
    padding-left: 5px;
}

.hot-cell-item {
    width: 100%;
    margin: 6px 0px;
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.12);
    display: flex;
    flex-direction: column;
    padding: 7px;
}

.hot-cell-item-img {
    width: 100%;
}

.hot-cell-item-name {
    font-size: 12px;
    color: #000;
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-between;
}

.hot-cell-item-price {
    font-size: 12.67px;
    color: #fd3434;
    font-weight: bold;
    white-space: nowrap;
}

.hot-cell-item-desc {
    word-break: break-all;
    width: 100%;
    font-size: 12px;
    color: #939393;
}

/* components/tab-bar/tab-bar.wxss */

.tab-bar-component {
    display: flex;
    width: 100%;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    border-top: 0.6rpx solid #ebebeb;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    background-color: #fff;
}

.tab-bar-item {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.tab-bar-item-dot {
    z-index: 2;
    width: 70%;
    height: 43%;
    background-color: yellow;
    opacity: 0.5;
    border-radius: 50%;
    position: absolute;
    top: 15%;
    right: 8%;
}

.tab-bar-type-col {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
}

.tab-bar-col-img {
    width: 42.23rpx;
    height: 42.23rpx;
    background-color: #ccc;
}

.tab-bar-col-text {
    font-size: 10px;
}

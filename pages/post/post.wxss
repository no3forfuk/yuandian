/* pages/post/post.wxss */

.post-page {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.post-page-comment {
    width: 100%;
    height: 92.92rpx;
    background-color: #f8f8f8;
    padding: 5px 25.34rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.post-page-input-box {
    width: 611.5rpx;
    height: 65.95rpx;
    background-color: #fff;
    border-radius: 4px;
    border: 1px solid rgba(214, 214, 214, 0.3);
    font-size: 14px;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    padding-left: 5px;
}

.post-page-input {
    flex: 1;
    background-color: #fff;
    height: 100%;
    font-size: 14px;
    padding-left: 5px;
}

.post-page-send-btn {
    font-size: 16px;
    color: #000;
}

.post-page-input-placeholder {
    display: flex;
    height: 100%;
    flex-direction: row;
    align-items: center;
}

.post-page-input-placeholder-hf {
    color: #c3c2c2;
    font-size: 14px;
}

.post-page-input-placeholder-name {
    color: #636363;
    font-size: 14px;
    margin-left: 5px;
}

/*  */

.post-card {
    width: 100%;
    padding: 0 18.7rpx;
    display: flex;
    flex-direction: row;
    overflow: hidden;
}

.post-card-left-img {
    width: 59.73rpx;
    height: 59.73rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.post-card-right {
    width: calc(100% - 59.73rpx);
    padding-left: 21.12rpx;
}

.post-card-right-name {
    font-size: 13px;
    font-weight: bold;
    margin-top: 6.03rpx;
    line-height: 13px;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
}

.post-card-right-content {
    font-size: 12px;
    line-height: 42.23rpx;
    width: 100%;
}

.post-card-right-imgs {
    font-size: 0;
}

.post-card-right-img {
    width: 192.47rpx;
    height: 192.47rpx;
    margin-bottom: 3px;
    margin-right: 3px;
    background-color: #efefef;
}

.post-created-time {
    color: #929292;
    font-size: 11px;
    padding: 18.1rpx 0;
}

.post-comment-ul {
    width: 100%;
    padding: 0 18.1rpx;
}

.post-comment-ul-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 9.05rpx;
}

.post-comment-li {
    width: 100%;
    padding: 9.05rpx;
    display: flex;
    background-color: #fff;
}

.post-comment-user-name {
    font-size: 13px;
    font-weight: bold;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    height: 59.73rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.post-comment-content {
    font-size: 12px;
    width: 100%;
}

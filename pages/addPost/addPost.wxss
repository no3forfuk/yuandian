/* pages/addPost/addPost.wxss */

.add-post-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 0 25.94rpx;
    font-size: 14.67px;
    color: #0060ff;
}

.add-post-textarea {
    padding: 0 25.94rpx;
    width: 100%;
    height: 258.84rpx;
    font-size: 14px;
    color: #111;
    margin-top: 19.91rpx;
}

.add-post-textarea-value {
    width: 100%;
    height: 100%;
    padding: 0 2px;
    background-color: #fff;
    border-radius: 5px;
    border: 1px solid rgba(115, 115, 115, 0.3);
    box-sizing: border-box;
}

.add-post-img-box {
    width: 100%;
    padding: 25.94rpx;
}

.add-post-add-img {
    width: 109.81rpx;
    height: 109.81rpx;
    border-radius: 5px;
    border: 1px solid rgba(177, 177, 177, 0.3);
    background-color: #ccc;
}

.add-post-img-result {
    width: 109.81rpx;
    height: 109.81rpx;
    border-radius: 5px;
}

/* pages/index/mine/mine.wxss */

.index-mine-header {
    width: 100%;
    height: 80px;
    background-color: #fff;
}

.index-mine {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
}

/* 退出&开锁 */

.mine-exit-options {
    margin-top: 10px;
    width: 100%;
    background-color: #fff;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.operate-items {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.operate-items-img {
    width: 60rpx;
    height: 60rpx;
    background-color: #eee;
}

.shuxian {
    width: 1px;
    height: 50rpx;
    background-color: #f2f2f2;
    /* background-color: #000; */
}

.operate-items-text {
    font-size: 12px;
    color: #999;
    line-height: 16px;
    margin-top: 6px;
}

/* 租客部分 */

.mine-renter-options {
    width: 100%;
    background-color: #fff;
    margin-top: 7px;
}

.renter-items {
    width: 100%;
    height: 87rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.renter-items-icon {
    width: 90rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.renter-items-text {
    width: calc(100% - 90rpx);
    border-bottom: 1px solid #f2f2f2;
    font-size: 16px;
    height: 100%;
    line-height: 87rpx;
    color: #424242;
}

.renter-items-img {
    width: 36rpx;
    height: 36rpx;
    background: #eee;
}

.border-none {
    border-bottom: 0 none;
}

.active-activity-component {
    width: 100%;
    height: 100%;
    padding: 0 15.08rpx;
}

.top-active {
    width: 100%;
    height: 247.98rpx;
    background-color: #ccc;
    border-radius: 5px;
    overflow: hidden;
    margin: 9.05rpx 0;
}

.top-active-img {
    width: 100%;
    height: 100%;
}

.classify-active {
    width: 100%;
    height: 161.7rpx;
    padding: 38.61rpx 0 25.34rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}


    display: flex;
    flex-direction: row;
    max-width: 100%;
    font-size: 12px;
    align-items: center;
}

.activing-item {
    width: 100%;
    height: 247.98rpx;
    border-radius: 5px;
    margin: 19.91rpx 0;
    background-color: #ddd;
    overflow: hidden;
}

.activing-item-img {
    width: 100%;
    height: 100%;
}

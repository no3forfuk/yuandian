/* pages/rent/unpaid/unpaid.wxss */

.unpaid-item {
    margin-top: 14rpx;
    width: 100%;
    padding: 28rpx 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.unpaid-item-desc {
    border-top: 1px solid #f2f2f2;
    width: 100%;
    height: 0rpx;
    background-color: #fff;
    overflow: hidden;
}

.unpaid-label {
    font-size: 16px;
    line-height: 22px;
    color: #424242;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}

.unpaid-fee {
    font-size: 16px;
    line-height: 22px;
    color: #ff534e;
}

.fee-num-box {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #999;
    margin-top: 14rpx;
    padding: 0 40rpx;
}

.fee-num {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #999;
}

.time-unit {
    width: 100%;
    display: flex;
    padding: 0 40rpx;
    justify-content: space-between;
    /* margin-top: 16rpx; */
}

.fee-value {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #424242;
}

.unpaid-label-icon {
    width: 38rpx;
    height: 38rpx;
    border-radius: 50%;
    border: 1px solid #c3c3c3;
    background-color: #fff;
}

.selected {
    background-color: #f64e4a;
    border: 0 none;
}

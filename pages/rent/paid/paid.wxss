/* pages/rent/paid/paid.wxss */

.paid-item {
    margin-top: 14rpx;
    width: 100%;
    padding: 28rpx 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.paid-item-desc {
    border-top: 1px solid #f2f2f2;
    width: 100%;
    height: 0rpx;
    background-color: #fff;
    overflow: hidden;
}

.paid-label {
    font-size: 16px;
    line-height: 22px;
    color: #424242;
}

.paid-fee {
    font-size: 16px;
    line-height: 22px;
    color: #ff534e;
}

.fee-num-box {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #999;
    margin-top: 14rpx;
    padding: 0 40rpx;
}

.fee-num {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #999;
}

.time-unit {
    width: 100%;
    display: flex;
    padding: 24rpx 40rpx 32rpx 40rpx; /* margin-top: 24rpx; */
    justify-content: space-between;
    align-items: center;
}

.fee-value {
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: #424242;
}

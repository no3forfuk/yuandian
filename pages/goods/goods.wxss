/* pages/goods/goods.wxss */

.spliter {
    width: 100%;
    height: 6.03rpx;
    background-color: #f2f2f2;
}

/* <!-- swiper --> */

.goods-detail-component {
    width: 100%;
    height: 100%;
}

.goods-swiper {
    width: 100%;
    height: 482.68rpx;
    background-color: #ccc;
}

.swiper-item-img {
    width: 100%;
    height: 100%;
}

/* Discount 商品 限时折扣 */

.goods-discount {
    width: 100%;
    height: 90.5rpx;
    background-color: #f34040;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #fff;
    padding: 10px 8px;
}

.discount-desc {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.discount-unit {
    font-size: 16px;
    line-height: 16px;
    align-self: flex-end;
}

.discount-price {
    font-size: 30px;
    line-height: 30px;
}

.discount-prime {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-self: center;
    margin-left: 21.72rpx;
    color: #e1e1e1;
    height: 100%;
    padding: 2px 0;
}

.discount-prime-cont {
    text-decoration: line-through;
    font-size: 10px;
    line-height: 10px;
}

.discount-prime-num {
    font-size: 10px;
    line-height: 10px;
}

.discount-label {
    color: #fff;
    font-size: 12px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

/* 商品描述 */

.goods-describe {
    width: 100%;
    padding: 5px 8px;
    display: flex;
    flex-direction: column;
}

.goods-describe-text {
    color: #939393;
    font-size: 14px;
}

.goods-describe-name {
    font-size: 18px;
    font-weight: bold;
}

.goods-describe-position {
    width: 100%;
    padding: 5px 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    color: #c7c6c6;
    font-size: 14px;
}

.goods-describe-city {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.goods-describe-city-icon {
    font-size: 18px;
    line-height: 18px;
}

.goods-describe-city-text {
    margin-left: 3px;
    font-size: 14px;
    line-height: 14px;
}

/* select goods modal */

.select-goods {
    width: 100%;
    padding: 5px 8px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.select-goods-text {
    font-size: 16px;
}

/* 商品评价 */

.goods-appraise {
    width: 100%;
    padding: 5px 8px;
}

.goods-appraise-title {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.goods-appraise-title-label {
    font-size: 16px;
    font-weight: bold;
}

.goods-appraise-title-more {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.appraise-title-more-text {
    font-size: 12px;
    color: #f34040;
}

.goods-appraise-body {
    padding: 8px 0;
}

.goods-appraise-item {
    display: flex;
    width: 100%;
}

.goods-appraise-item-user {
    width: 61.54rpx;
    height: 61.54rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.goods-appraise-item-content {
    width: calc(100% - 61.54rpx);
    padding-left: 8px;
}

.goods-appraise-item-name {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 14px;
}

.goods-appraise-time {
    font-size: 10px;
}

/* details */

.goods-detail {
    width: 100%;
}

.goods-detail-img {
    width: 100%;
}

.goods-detail-title {
    font-size: 16px;
    font-weight: bold;
    padding: 5px 8px;
}

/* 推荐商品 */

.goods-recommen {
    width: 100%;
}

/* tab bar */

.goods-tabbar {
    width: 100%;
    height: 78.5rpx;
    background-color: #fff;
    border-top: 1px solid #dedede;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 18.1rpx 14.5rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    align-items: center;
}

.tab-bar-item-text {
    font-size: 14px;
    color: #000;
    line-height: 14px;
    margin-left: 13.29rpx;
}

.tab-bar-item-img {
    width: 44.08rpx;
    height: 44.08rpx;
    background-color: #eee;
}

.tab-bar-item {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.tab-bar-btn {
    width: 256.6rpx;
    height: 53.74rpx;
    background-color: #ff7272;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-radius: 4px;
}

.tab-bar-btn-text {
    font-size: 14px;
    color: #fff;
    font-weight: bold;
}

/* goods-popup */

.goods-popup {
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #fff;
    top: 0;
    left: 0;
    z-index: 1;
    transform: translateX(100%);
}

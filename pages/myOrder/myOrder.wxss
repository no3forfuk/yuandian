/* pages/myOrder/myOrder.wxss */

.order-page {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    position: relative;
}

.order-header {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    position: relative;
}

.header-item-text {
    font-size: 14px;
    line-height: 20px;
    color: #999;
}

.order-body {
    width: 100%;
}

.order-header-item {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-wrap: nowrap;
    height: 100%;
}

.current-class {
    color: #3d9689;
}

.fee-mark {
    height: 4rpx;
    width: 100rpx;
    background-color: #3d9689;
    position: absolute;
    left: 0;
    bottom: 0;
    transition: all 0.3s;
}

.order-footer {
    width: 100%;
    height: 88rpx;
    background-color: #fe514c;
    color: #fff;
    font-size: 18px;
    line-height: 25px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    position: absolute;
    left: 0;
    bottom: 0;
}
